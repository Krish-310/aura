{
  "manifest_version": 3,
  "name": "Text Selection Tooltip",
  "version": "0.1.0",
  "description": "Shows selected text in a tooltip above the selection.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}
