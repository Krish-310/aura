{
  "manifest_version": 3,
  "name": "GitHub Code Explainer",
  "version": "0.1.0",
  "description": "Explains selected code using repository context from ChromaDB.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ]
}
